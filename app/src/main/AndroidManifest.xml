<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.planshare">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:noHistory = "true"
        >

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.planshare.MainActivity"
            />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".QueryDiary" android:parentActivityName=".ScheduleCode.Schedule_MakeANewTask"></activity>

        <activity android:name=".QuickDiaryView_Day" android:parentActivityName=".ScheduleCode.Schedule_MakeANewTask"></activity>
        <activity android:name=".QuickDiaryView_Week" android:parentActivityName=".ScheduleCode.Schedule_MakeANewTask"></activity>

        <activity android:name=".Settings" android:parentActivityName=".ScheduleCode.Schedule_MakeANewTask"></activity>

        <activity android:name=".ToDoList_MakeNewTask" android:parentActivityName=".ScheduleCode.Schedule_MakeANewTask"></activity>
        <activity android:name=".ToDoListView" android:parentActivityName=".ScheduleCode.Schedule_MakeANewTask"></activity>
        <activity android:name=".ToDoListsMain" android:parentActivityName=".ScheduleCode.Schedule_MakeANewTask"></activity>

        <activity android:name=".CalanderCode.Calander_AddADate" android:parentActivityName=".ScheduleCode.Schedule_MakeANewTask"></activity>
        <activity android:name=".CalanderCode.CalanderView_Day" android:parentActivityName=".ScheduleCode.Schedule_MakeANewTask"></activity>
        <activity android:name=".CalanderCode.CalanderView_Month" android:parentActivityName=".ScheduleCode.Schedule_MakeANewTask"></activity>
        <activity android:name=".CalanderCode.CalanderView_Year" android:parentActivityName=".ScheduleCode.Schedule_MakeANewTask"></activity>

        <activity android:name=".ScheduleCode.SchedulesMain" android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".ScheduleCode.Schedule_MakeANewSchedule" android:parentActivityName=".ScheduleCode.SchedulesMain"></activity>
        <activity android:name=".ScheduleCode.Schedule_MakeANewTask" android:parentActivityName=".ScheduleCode.SchedulesView_Week"></activity>
        <activity android:name=".ScheduleCode.SchedulesView_Day" android:parentActivityName=".ScheduleCode.SchedulesView_Week"></activity>
        <activity android:name=".ScheduleCode.SchedulesView_Week" android:parentActivityName=".ScheduleCode.SchedulesMain"></activity>

        <activity android:name=".ScheduleCode.PopUp_AddScheduleOrFolder"
            android:theme="@style/AppTheme.PopUpWindow"></activity>

        <activity android:name=".ScheduleCode.PopUp_AddScheduleType"
            android:theme="@style/AppTheme.PopUpWindow"></activity>


    </application>

</manifest>